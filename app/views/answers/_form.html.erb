<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [@question, @question.answers.build], remote: true do |f| %>
    
      <%= f.label :content %>
      <%= f.text_area :content, cols: "20", rows: "5", class: 'form-control' %>

      <%= f.submit "Answer", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>