<% provide(:title, @question.description) %>
<div class="row">
  <div class="container">
  	<div class = "col-md-1">
  			<div class = "col-md-4">
  				<%= link_to "", like_question_path(@question), method: :put, 
  				class: "btn btn-sm btn-default", class: "glyphicon glyphicon-thumbs-up", remote: true %>
  			</div>
  			<div class = "col-md-4", id = "upvotes">
  				<%= @question.total_upvotes %>
  			</div>
  			<div class = "col-md-4", id = "upvotes">
  				<%= link_to "", dislike_question_path(@question), method: :put, 
	    		class: "btn btn-sm btn-default", class: "glyphicon glyphicon-thumbs-down" %>
  			</div>
  			<div class = "col-md-4", id = "downvotes">
  				<%= @question.total_downvotes %>
  			</div>
  	</div>
  	<div class = "col-md-11">
  		<div class="container">
  			<div class = "col-md-10">
  				<h3>  <%= @question.description %>  </h3>
  			</div> 
  			<div class = "col-md-2">
  				<% if can? :destroy, @question %>
  				<%= link_to "Delete", destroy_question_path(@question.id), class: "btn btn-primary", 
  				data: { confirm: "Are you sure you want to delete this question?" } %>
  				<% end %>
  			</div> 
  		</div>
  		<div class = "container">
  			<div class = "col-md-10">
  				<p> <%= @question.explanation %> </p>
  			</div>
  		</div>
  	</div>
  </div>
</div>