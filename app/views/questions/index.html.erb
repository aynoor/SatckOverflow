<% content_for :top_content do %>
  <div class="jumbotron">
    <div class="container">
    	<div class="container">
				<div class = "col-md-10">
					<h3>Questions</h3>
				</div> 
				<div class = "col-md-2">
					<% if user_signed_in?  %>
		  			<%= link_to "Ask Question", new_path, class: "btn btn-primary" %>
					<% end %>
				</div> 
    	</div>
    	<hr>

      <%= will_paginate %>

      <ul class = "questions">
      	<%= render @questions %>
      </ul>

      <%= will_paginate %>

    </div>
  </div>
<% end %>